<Window x:Class="BS__MapDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BS__MapDownloader"
        mc:Ignorable="d"
        Title="BS+ Map Downloader" Height="335" Width="360" ResizeMode="CanMinimize">
    <Grid>
        <TextBox Name="MapKey" HorizontalAlignment="Left" Height="17" Margin="30,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="MapKey_OnTextChanged" Width="71"/>
        <Label Content="BSR Key:" HorizontalAlignment="Left" Margin="14,24,0,0" VerticalAlignment="Top"/>
        <Image Name="MapImage" HorizontalAlignment="Left" Height="100" Margin="20,90,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Name="MapName" Content="" HorizontalAlignment="Left" Margin="132,105,0,0" VerticalAlignment="Top" Width="197" Height="73"/>
        <Button Content="Download" HorizontalAlignment="Left" Margin="30,202,0,0" VerticalAlignment="Top" Width="299" Click="Button_Click" Height="45"/>
        <Button Content="Playlist Download" HorizontalAlignment="Left" Margin="30,252,0,0" VerticalAlignment="Top" Width="299" Click="Playlist_Button_Click" Height="34"/>
    </Grid>
</Window>
